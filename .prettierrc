{
  "plugins": [
    "prettier-plugin-svelte"
  ],
  "pluginSearchDirs": [
    "."
  ],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "printWidth": 80,
        "parser": "svelte"
      }
    },
    {
      "files": "*.{js,ts,jsx,tsx}",
      "options": {
        "bracketSameLine": true,
        "printWidth": 80,
        "trailingComma": "all",
        "arrayElementNewline": true
      }
    }
  ],
  "htmlWhitespaceSensitivity": "css",
  "bracketSameLine": true,
  "printWidth": 80,
  "trailingComma": "all",
  "arrayElementNewline": true
}